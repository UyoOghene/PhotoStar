<% layout('layouts/boilerplate') -%>

    <div class="container">
    <h1>Edit post</h1>
    <form action="/posts/<%= post._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div>
            <label for="image">Upload New Image(s)</label>
            <input type="file" id="image" name="images" multiple> 
        </div>
        <div>
            <label for="caption">Caption</label>
            <input type="text" id="caption" name="post[caption]" value="<%= post.caption %>">
        </div>
        <button>Submit update</button>
    </form>
    <a href="/posts/<%= post._id %>">Back to Post</a>

    </div>
